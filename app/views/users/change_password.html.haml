= govuk_page_title('Change Password')

.govuk-body
  = form_for(@user, url: update_password_user_path(@user)) do |f|

    = f.govuk_text_field(:current_password,
      type: 'password',
      label: { text: 'Current password' })

    = f.govuk_text_field(:password,
      type: 'password',
      label: { text: 'New password' })

    = f.govuk_text_field(:password_confirmation,
      type: 'password',
      label: { text: 'Confirm new password' })

    = f.govuk_submit(t('devise.passwords.user.form.change.submit'))
