= govuk_page_title(@defendant.name)

%table.govuk-table
  %caption.govuk-table__caption.govuk-visually-hidden
    = t('search.result.defendant.caption')
  %tbody.govuk-table__body
    %tr.govuk-table__row
      %td.govuk-table__cell{ class: 'govuk-!-font-weight-bold' }
        = t('search.result.defendant.date_of_birth')
      %td.govuk-table__cell
        = l(@defendant.date_of_birth&.to_date)
    %tr.govuk-table__row
      %td.govuk-table__cell{ class: 'govuk-!-font-weight-bold' }
        = t('search.result.defendant.prosecution_case_reference')
      %td.govuk-table__cell
        = link_to @defendant.prosecution_case_reference, prosecution_case_path(@defendant.prosecution_case_reference)
    %tr.govuk-table__row
      %td.govuk-table__cell{ class: 'govuk-!-font-weight-bold' }
        = t('search.result.defendant.national_insurance_number')
      %td.govuk-table__cell
        = @defendant.national_insurance_number
    %tr.govuk-table__row
      %td.govuk-table__cell{ class: 'govuk-!-font-weight-bold' }
        = t('search.result.defendant.arrest_summons_number')
      %td.govuk-table__cell
        = @defendant.arrest_summons_number
    - if @defendant.linked?
      %tr.govuk-table__row
        %td.govuk-table__cell{ class: 'govuk-!-font-weight-bold' }
          = t('search.result.defendant.maat_number')
        %td.govuk-table__cell
          = @defendant.maat_reference

= render('representation_orders', locals: @defendant) if @defendant.linked?

= render 'offences', locals: @defendant

= render 'laa_references/unlink', locals: @defendant if @defendant.linked?

= render('laa_references/form', locals: @defendant) unless @defendant.linked?

